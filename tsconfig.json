{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "lib": [
            "dom",
            "es2015"
        ],
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "./resources/ts/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "resources/ts/**/*"
    ]
}